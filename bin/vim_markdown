#!/bin/bash

if [ ! -f "$1" ]; then 
cat << EOF > $1
<!--- github markdown: {{{ --->
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="$HOME/dotfiles/github-markdown.css">
<style>
	.markdown-body {
		box-sizing: border-box;
		min-width: 200px;
		max-width: 980px;
		margin: 0 auto;
		padding: 45px;
	}

	@media (max-width: 767px) {
		.markdown-body {
			padding: 15px;
		}
	}
</style>
<!--- }}} --->
<article class="markdown-body">


</article>
EOF
fi

nvim $1
